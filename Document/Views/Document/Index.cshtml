@model List<Document.Core.Models.Document>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                File Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Download", "Download", new { fileName = item.Name }) |
                        @Html.ActionLink("Delete", "Delete", new { fileName = item.Name })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
